<coordinator-app name="${coordinator_name}"
  frequency="${freq}"
  start="${start_date}" end="${end_date}" timezone="${timezone}"
  xmlns="uri:oozie:coordinator:0.2">
  <controls>
    <execution>FIFO</execution>
	<throttle>1</throttle>
  </controls>
  <action>
    <workflow>
      <app-path>${wf_application_path}</app-path>
      <configuration>
	    <property>
          <name>actualTime</name>
            <value>${coord:formatTime(coord:dateOffset(coord:actualTime(),-1,&#39;DAY&#39;), &#39;yyyy-MM-dd&#39;)}</value>
        </property>
        <property>
            <name>oozie.use.system.libpath</name>
            <value>true</value>
        </property>
        <property>
            <name>start_date</name>
            <value>${start_date}</value>
        </property>
        <property>
            <name>end_date</name>
            <value>${end_date}</value>
        </property>
		<property>
            <name>dbServer</name>
            <value>${dbServer}</value>
        </property>
		<property>
            <name>dbUsername</name>
            <value>${dbUsername}</value>
        </property>
		<property>
            <name>dbPassword</name>
            <value>${dbPassword}</value>
        </property>
		<property>
			<name>hiveJdbc</name>
			<value>${hiveJdbc}</value>
        </property>
		<property>
			<name>passwordHive</name>
			<value>${passwordHive}</value>
        </property>
      </configuration>
   </workflow>
  </action>
</coordinator-app>
